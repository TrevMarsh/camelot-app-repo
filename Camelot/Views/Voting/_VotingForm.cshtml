@using Camelot.Models
@model Camelot.ViewModels.TopicResponse


@Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.HiddenFor(m => m.PartID)
    @Html.HiddenFor(m => m.Participant)
    @Html.HiddenFor(m => m.Color)
    @Html.HiddenFor(m => m.JoinParticipantID)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <h3><span class="label label-default">@Model.Topic</span></h3>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Importance, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Importance, Score.ONE) @((int)Score.ONE) - Zeer Onbelangrijk
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Importance, Score.TWO) @((int)Score.TWO) - Onbelangrijk
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Importance, Score.THREE) @((int)Score.THREE) - Minder belangrijk
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Importance, Score.FOUR) @((int)Score.FOUR) - Belangrijk
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Importance, Score.FIVE) @((int)Score.FIVE) - Zeer belangrijk
            </label>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Feasability, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Feasability, Score.ONE) @((int)Score.ONE) - Helemaal niet haalbaar
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Feasability, Score.TWO) @((int)Score.TWO) - Niet erg haalbaar
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Feasability, Score.THREE) @((int)Score.THREE) - Redelijk haalbaar
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Feasability, Score.FOUR) @((int)Score.FOUR) - Haalbaar
            </label>
            <label class="btn btn-primary">
                @Html.RadioButtonFor(m => m.Feasability, Score.FIVE) @((int)Score.FIVE) - Uitermate haalbaar
            </label>
        </div>

    </div>
</div>

<div class="form-group">
    <div class="col-md-2">
        <input id="voteBtn" type="submit" value="Vote" class="btn btn-success" />
    </div>
</div>

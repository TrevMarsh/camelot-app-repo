@model IEnumerable<Camelot.Models.Round>

<table class="table table-striped table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th></th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td>It's empty</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.ActionLink("View", "ArchiveGraph", "Session", new { id = item.ID }, new { @class = "btn btn-success", @style = "color:white" })
            </td>
        </tr>
    }
</table>
